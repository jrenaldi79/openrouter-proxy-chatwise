# Server Configuration
PORT=3000
NODE_ENV=development

# OpenRouter API Configuration
OPENROUTER_BASE_URL=https://openrouter.ai
REQUEST_TIMEOUT_MS=30000

# Development/Testing API Key (Optional)
# Set this to your real OpenRouter API key for testing
# Format: sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_TEST_API_KEY=sk-or-v1-your-api-key-here-replace-with-real-key

# Cache Configuration
CACHE_TTL_SECONDS=30
CACHE_MAX_SIZE=1000

# Feature Flags
ENABLE_TRANSFORMATION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
BALANCE_INJECTION_DEBUG=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=false

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000

# Performance Configuration
KEEP_ALIVE_TIMEOUT_MS=65000
HEADERS_TIMEOUT_MS=66000